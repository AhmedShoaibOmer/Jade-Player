<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/exploreFragment">

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.jadebyte.jadeplayer.main.explore.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_exploreFragment_to_navigationDialogFragment"
            app:destination="@id/navigationDialogFragment"/>
    </fragment>
    <fragment
        android:id="@+id/songsFragment"
        android:name="com.jadebyte.jadeplayer.main.songs.SongsFragment"
        android:label="SongsFragment"
        tools:layout="@layout/fragment_base_player" >
        <action
            android:id="@+id/action_songsFragment_to_navigationDialogFragment"
            app:destination="@id/navigationDialogFragment" >
            <argument android:defaultValue="0"
                android:name="origin" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/albumsFragment"
        android:name="com.jadebyte.jadeplayer.main.albums.AlbumsFragment"
        android:label="AlbumsFragment"
        tools:layout="@layout/fragment_albums" />
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.jadebyte.jadeplayer.main.playlist.PlaylistFragment"
        android:label="PlaylistFragment"
        tools:layout="@layout/fragment_playlist" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.jadebyte.jadeplayer.main.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />
    <dialog-fragment
        android:id="@+id/navigationDialogFragment"
        android:name="com.jadebyte.jadeplayer.main.navigation.NavigationDialogFragment"
        android:label="fragment_navigation_dialog"
        tools:layout="@layout/fragment_navigation_dialog">
        <argument
            android:name="origin"
            app:argType="integer"
            android:defaultValue="-1" />
    </dialog-fragment>
</navigation>